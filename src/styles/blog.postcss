#blog h2,
#blog h3,
#blog h4,
#blog h5,
#blog h6 {
	@apply font-serif text-blue leading-none mt-8 mb-4 pt-6;
}
#blog h2 {
  @apply text-3xl uppercase;
}
#blog p {
  @apply font-mono text-xl;
}

#blog a:hover {
  color: var(--pink);
}

#blog p.body {
  @apply my-4;
}

#blog p.body:first-of-type::first-letter {
  font-size: 250%;
  @apply bg-blue text-gray  px-1 mr-2 leading-none float-left;
}
